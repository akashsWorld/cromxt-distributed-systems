package com.cromxt.route_service;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.core.env.Environment;

import java.util.UUID;

@SpringBootApplication
public class RouteServiceApplication {
	public static void main(String[] args) {
		SpringApplication.run(RouteServiceApplication.class, args);
	}

	@Bean
	public CommandLineRunner commandLineRunner(Environment environment) {
		return args -> {
			String groupId = environment.getProperty("KAFKA_LISTENER_GROUP_ID", String.class, UUID.randomUUID().toString());
			System.setProperty("kafka.consumer.group-id", groupId);
		};
	}
}
